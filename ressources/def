//Création d'un utilisateur
POST http://localhost/utilisateur

réception : 
{
   nom,
   prenom,
   login,
   mot_de_passe,
   naissance
}
envoie :
valide
{
	status : 200,
	user : objet
}
invalide
{
	status : 500,
	erreur : string
}

//authentification
GET http://localhost/utilisateur/authentification
réception : 
{
   login,
   mdp
}

envoie :
valide
{
	status : 200,
	user : objet => null si pas d'utilisateur existant
}
invalide
{
	status : 500,
	erreur : string
}

//Récupération d'un utilisateur
GET http://localhost/utilisateur/{id}
envoie :
valide
{
	status : 200,
	user : objet + s'assurer que les profils sont dans l'objet utilisateur
}
invalide
{
	status : 500,
	erreur : string
}


//modif utilisateur
PUT http://localhost/utilisateur/

réception : 
{
   id,
   nom,
   prenom,
   login,
   mot_de_passe,
   naissance
}
envoie :
valide
{
	status : 200,
	true
}
invalide
{
	status : 500,
	erreur : string
}

//suppression utilisateur
DELETE http://localhost/utilisateur/{id}
valide
{
	status : 200,
	true
}
invalide
{
	status : 500,
	erreur : string
}

//ajout d'un profil
POST http://localhost/utilisateur/{id}/profil/{id}
renvoie :
valide
{
	status : 200,
	true
}
invalide
{
	status : 500,
	erreur : string
}

//Suppression d'un profil
DELETE http://localhost/utilisateur/{id}/profil/{id}
renvoie :
valide
{
	status : 200,
	true
}
invalide
{
	status : 500,
	erreur : string
}


//Récupération GET des tables profil + type_releve + POST PUT DELETE


//Ajout d'un relevé médicale
POST http://localhost/releve
réception : 
{
	releve_medicale : objet
}
renvoie :
valide
{
	status : int,
	releve_medicale : objet
}
invalide
{
	status : int,
	erreur : string
}

//modifier un relevé
PUT http://localhost/releve/{id}
réception : 
{
	releve_medicale : objet
}
renvoie :
valide
{
	status : int,
}
invalide
{
	status : int,
	erreur : string
}

//supprimer un relevé
DELETE http://localhost/releve/{id}
renvoie :
valide
{
	status : int,
}
invalide
{
	status : int,
	erreur : string
}


//Récupération d'un relevé
GET http://localhost/releve/{id}

// Récupération des relevé en fonction d'un type
GET http://localhost/releve?type=:type

//Liste des relevé d'un utilisateur
GET http://localhost/releve/utilisateur/{id}

//Liste des relevé d'un utilisateur avec une pagination par 5 relevés
GET http://localhost/releve/page/:page/utilisateur/{id}

//Récupération des analyses d'un utilisateur
GET http://localhost/analyse/utilisateur/{id}

//Récupérer les analyses d'un releve
GET http://localhost/analyse/releve/{id}


